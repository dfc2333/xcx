<!--index.wxml-->
<view class="block">
    <t-navbar t-class-placeholder="t-navbar-placeholder" t-class-content="t-navbar-content" title="走进高原" t-class-title="nav-title" style="--td-navbar-color: #000;--td-navbar-bg-color:#dfc;" />
</view>
<scroll-view class="scrollarea" scroll-y='true'>
    <view class="container" style='border: 20rpx solid white;'>
        <image id="img1" src="https://www.helloimg.com/i/2025/02/09/67a884f1c8ae4.jpg" mode="aspectFit" show-menu-by-longpress="true"></image>
        <view class='sub-ctnr'>
            <view class='min-ctnr' bind:tap="switch_to_intro">
                <t-icon name="article" size="48rpx" data-name="article" />
                <text class="text-center-flex">高原介绍
                </text>
            </view>
            <view class='min-ctnr' bind:tap="switch_to_bp">
                <t-icon name="collection" size="48rpx" data-name="collection" />
                <text class="text-center-flex">必备物品
                </text>
            </view>
        </view>
        <view class='sub-ctnr'>
            <view class='min-ctnr' bind:tap="switch_to_sos">
                <t-icon name="error-circle" size="48rpx" data-name="error-circle" />
                <text class="text-center-flex">SOS求救
                </text>
            </view>
            <view class='min-ctnr' bind:tap="switch_to_tools">
                <t-icon name="tools" size="48rpx" data-name="tools" />
                <text class="text-center-flex">工具包
                </text>
            </view>
        </view>
        <view class='sub-ctnr'>
            <view class='min-ctnr' bind:tap="switch_to_culture">
                <t-icon name="city" size="48rpx" data-name="city" />
                <text class="text-center-flex">海珠文化
                </text>
            </view>
            <view class='min-ctnr' bind:tap="switch_to_wj">
                <t-icon name="tips-double" size="48rpx" data-name="tips-double" />
                <text class="text-center-flex">用户调查
                </text>
            </view>
        </view>
    </view>
</scroll-view>